<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="475dp"
    android:background="@drawable/back_g_forall"
    android:padding="5dp"
    android:textAlignment="center"
    android:layout_gravity="center">



    <Button
        android:id="@+id/txtclose"
        android:layout_width="40dp"
        android:layout_marginEnd="10dp"
        android:layout_height="40dp"
       android:background="@drawable/circleclose"
        android:textStyle="bold"
        android:text="X"
        android:layout_gravity="end"
        android:gravity="center"
       />


<LinearLayout
    android:layout_marginTop="15dp"
    android:background="@drawable/blue_btn"
    android:layout_width="match_parent"
    android:layout_marginEnd="30dp"
    android:layout_weight="2"
    android:layout_marginStart="30dp"
    android:layout_height="80dp">
    <TextView
        android:id="@+id/helloUser"
        android:layout_width="150dp"
        android:layout_weight="1"
        android:textSize="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="15dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:layout_height="20dp" />
    <ImageView
        android:layout_marginVertical="10dp"
        android:layout_width="60dp"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center_vertical"
        android:id="@+id/profileImage"
        android:layout_height="match_parent"

        />
</LinearLayout>



    <Button
        android:layout_marginTop="110dp"
        android:id="@+id/rateUs"
        android:background="@drawable/setting_btn"
        android:text="Rate Us"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        />



    <com.facebook.login.widget.LoginButton xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/signOut_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="50dp"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text=""
        android:textSize="20sp"
        android:textStyle="bold"
        />






</LinearLayout>