<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="475dp"
    android:background="@drawable/back_g_forall"
    android:padding="5dp"
    android:layout_gravity="center">



    <Button
        android:id="@+id/txtclose"
        android:layout_width="40dp"
        android:layout_marginEnd="10dp"
        android:layout_height="40dp"
       android:background="@drawable/circleclose"
        android:textStyle="bold"
        android:text="X"
        android:layout_gravity="end"
        android:gravity="center"
       />


<LinearLayout
    android:layout_marginTop="15dp"
    android:orientation="horizontal"
    android:background="@drawable/blue_btn"
    android:layout_width="match_parent"
    android:layout_marginEnd="30dp"
    android:layout_marginStart="30dp"
    android:layout_height="80dp">
    <TextView
        android:id="@+id/helloUser"
        android:layout_marginLeft="10dp"
        android:layout_width="200dp"
        android:textAlignment="viewEnd"
        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"/>
    <ImageView
        android:layout_marginVertical="10dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/profileImage"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="70dp"/>
</LinearLayout>

    <Button
        android:layout_marginTop="70dp"
        android:id="@+id/About"
        android:background="@drawable/setting_btn"
        android:text="About"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        />

    <Button
        android:layout_marginTop="40dp"
        android:id="@+id/rateUs"
        android:background="@drawable/setting_btn"
        android:text="Rate Us"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        />



    <com.facebook.login.widget.LoginButton xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/signOut_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="50dp"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="@string/sign_out"
        android:textSize="20sp"
        android:textStyle="bold"
        />






</LinearLayout>