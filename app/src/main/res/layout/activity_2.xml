<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/my_bg"
    tools:context="com.example.tapfight.MainActivity">

    <Button
        android:id="@+id/blueButton"
        android:fontFamily="sans-serif-thin"
        android:layout_width="327dp"
        android:layout_height="85dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/blue_btn"
        android:linksClickable="true"
        android:selectAllOnFocus="true"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="0"
        android:singleLine="false"
        android:text="BLUE"
        android:textSize="36sp"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:rotation="180"/>


    <Button

        android:id="@+id/redButton"

        android:layout_width="327dp"
        android:layout_height="85dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/red_btn"
        android:text="RED"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="sans-serif-thin"
            />


    <LinearLayout
        android:id="@+id/totalSumScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:layout_gravity="center_horizontal"

        android:paddingRight="20dp"
        android:background="@drawable/back_g_forall"
        android:weightSum="100">


        <View
            android:id="@+id/viewblue"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="49"
            android:animateLayoutChanges="true"
            android:background="@drawable/blue_view"
            android:layout_gravity="top"


            />
        <View
            android:id="@+id/viewblack"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:animateLayoutChanges="true"
            android:background="#000000"
            android:layout_gravity="top"

            />

        <View
            android:id="@+id/viewred"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:layout_weight="99"
            android:animateLayoutChanges="true"
            android:background="@drawable/red_btn"



            />



    </LinearLayout>

    <TextView
        android:id="@+id/text_view_countdown"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:fontFamily="sans-serif-thin"
        android:rotation="0"
        android:text="00"

        android:textColor="@android:color/black"
        android:textSize="100sp"
        app:layout_constraintBottom_toTopOf="@+id/redResultTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/text_view_countdown2"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:fontFamily="sans-serif-thin"
        android:rotation="180"
        android:text="00"
        android:textColor="@android:color/black"
        android:textSize="100sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blueResultTextView"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/blueResultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-thin"
        android:rotation="180"

        android:text="Result"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19999999" />

    <TextView
        android:id="@+id/blueResultTextView2"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-thin"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.92"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.665" />

    <TextView
        android:id="@+id/redResultTextView"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:fontFamily="sans-serif-thin"
        android:text="Result"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blueButton"
        app:layout_constraintVertical_bias="0.85" />

    <TextView
        android:id="@+id/redResultTextView2"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:fontFamily="sans-serif-thin"
        android:rotation="180"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blueButton"
        app:layout_constraintVertical_bias="0.214" />


</androidx.constraintlayout.widget.ConstraintLayout>